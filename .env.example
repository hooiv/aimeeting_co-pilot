# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_meeting_copilot
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# AI Service Configuration
HUGGINGFACE_API_KEY=your-huggingface-api-key
OPENAI_API_KEY=your-openai-api-key
HF_TRANSCRIPTION_MODEL=facebook/wav2vec2-base-960h
HF_SUMMARIZATION_MODEL=facebook/bart-large-cnn
HF_SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english
HF_TRANSLATION_MODEL=Helsinki-NLP/opus-mt-en-es
OPENAI_MODEL=gpt-3.5-turbo

# Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=audio/wav,audio/mp3,audio/mp4,video/mp4,video/webm

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=AI Meeting Co-Pilot <noreply@example.com>

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Integration APIs
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
HUBSPOT_API_KEY=your-hubspot-api-key

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=true

# Storage Configuration
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-meeting-copilot-storage

# WebRTC Configuration
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_CREDENTIAL=your-turn-credential
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Feature Flags
ENABLE_RECORDING=true
ENABLE_TRANSCRIPTION=true
ENABLE_AI_INSIGHTS=true
ENABLE_INTEGRATIONS=true
ENABLE_ANALYTICS=true

# Development Only
DEV_SEED_DATA=true
DEV_MOCK_AI=false
